<h2 class="text-center">Tizimga kirish</h2>

@model UserDto;

<div class="d-flex justify-content-center">
    <form asp-action="SignIn" class="mb-3 w-25" method="post">
        <div class="form-group">
        <label for="PhoneNumber" class="form-label">PhoneNumber</label>
        <input class="form-control" type="text" id="PhoneNumber" name="Phone" value="998" placeholder="PhoneNumber" />
        <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
        <label for="Password" class="form-label">Password</label>
        <input class="form-control" type="password" id="Password" name="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <input class="form-control btn btn-primary mt-3" type="submit" value="Sign In" />
        <a asp-action="SignUp" class="form-control btn btn-primary mt-5" >Sign Up</a>
    </form>
</div>